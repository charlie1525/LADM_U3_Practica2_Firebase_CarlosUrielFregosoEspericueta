<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".SearchScreen">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Buscar en..."
        android:textColor="@color/black"
        android:textSize="25sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtnArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:text="Área" />

        <RadioButton
            android:id="@+id/rbtnsubdepa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SubDepartamento" />

    </RadioGroup>

    <TextView
        android:id="@+id/labelArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Área:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtSSdescripcionArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción:"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/txtSSdivisionArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="División:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/labelSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="SubDepatamento"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtIdEdificioSD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edificio:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtSSdescripcionSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtSSdivisionSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Divisón:"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnSSsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Buscar" />

    <Button
        android:id="@+id/btnSSback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="regresar" />


</LinearLayout>